@page
@using Pract2.Models;
@model Pract2.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Employee</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label class="col-sm-2 col-form-label">Employee Id:</label>
        <input asp-for="MyEmployee.Id" />
        <!--<span asp-validation-for="MyEmployee.Id" class="text-danger"></span>-->
    </div>

    <div>
        <label class="col-sm-2 col-form-label">NRIC:</label>
        <input asp-for="MyEmployee.NRIC" />
        <span asp-validation-for="MyEmployee.NRIC" class="text-danger"></span>
    </div>

    <div>
        <label class="col-sm-2 col-form-label">Name:</label>
        <input asp-for="MyEmployee.Name" />
        <span asp-validation-for="MyEmployee.Name" class="text-danger"></span>

    </div>
    <div>
        <label class="col-sm-2 col-form-label">Birth Date:</label>
        <input asp-for="MyEmployee.BirthDate" />
        <span asp-validation-for="MyEmployee.BirthDate" class="text-danger"></span>
    </div>


    <div>
        <label class="col-sm-2 col-form-label">Gender:</label>
        @Html.RadioButton("MyEmployee.Gender", "M")<span>Male</span>
        @Html.RadioButton("MyEmployee.Gender", "F")<span>Female</span>
        <span asp-validation-for="MyEmployee.Gender" class="text-danger"></span>
    </div>

    <!-- Alternative way to creating radio button
    <div>
           <label class="col-sm-2 col-form-label">Gender:</label>
           <input type="radio" asp-for="MyEmployee.Gender" value="M" />
           <label for="male">Male</label>
           <input type="radio" asp-for="MyEmployee.Gender" value="F" />
           <label for="female">Female</label>
           <span asp-validation-for="MyEmployee.Gender" class="text-danger"></span>
    </div> -->
    <!-- using Html Dropdownlist helper -->
    <div>
        <label class="col-sm-2 col-form-label">Department:</label>
        @Html.DropDownList("Myemployee.Department", new SelectList(Enum.GetValues(typeof(Models.Dept.DeptList))), "--Select an option--")
        <span asp-validation-for="MyEmployee.Department" class="text-danger"></span>
    </div>

    <!-- Alternative of droppdown list using html select
    <div>
            <label class="col-sm-2 col-form-label">Department:</label>
            <select asp-for="MyEmployee.Department" asp-items="new SelectList(Enum.GetValues(typeof(Models.Dept)))">
                <option value="">--Select--</option>
            </select>
            <span asp-validation-for="MyEmployee.Department" class="text-danger"></span>
    </div> -->

    <div>
        <label class="col-sm-2 col-form-label">Salary</label>
        <input id="Salary" asp-for="MyEmployee.Salary" />
        <span asp-validation-for="MyEmployee.Salary" class="text-danger"></span>
    </div>

    <div class="col-sm-10">
        <input id="create" type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

